<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="60dp"
    android:gravity="center_horizontal"
    tools:context=".ui.paramtres_compte.ParamtresCompteFragment">

    <ImageView
        android:layout_width="241dp"
        android:layout_height="134dp"
        android:src="@drawable/profil2" />
    <EditText
        android:layout_marginTop="60dp"
        android:id="@+id/NomFournisseurModification"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGray"
        android:backgroundTint="@color/darkGreen"
        />
    <EditText
        android:id="@+id/PrenomFournisseurModification"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGray"
        android:backgroundTint="@color/darkGreen"
        />
    <EditText
        android:id="@+id/AdresseEmailModification"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGray"
        android:backgroundTint="@color/darkGreen"
        />
    <EditText
        android:id="@+id/MotDePasseModification"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/mot_de_passe"
        android:backgroundTint="@color/darkGreen"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrez votre mot de passe pour confirmer"
        android:backgroundTint="@color/darkGreen"
        />
    <Button
        android:id="@+id/ModifierProfil"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Mettre Ã  jour"
        android:backgroundTint="@color/darkGreen"
        android:layout_marginTop="20dp"

        />



</LinearLayout>